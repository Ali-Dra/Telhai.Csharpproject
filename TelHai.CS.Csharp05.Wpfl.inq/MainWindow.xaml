<Window x:Class="TelHai.CS.Csharp05.Wpfl.inq.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TelHai.CS.Csharp05.Wpfl.inq"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>

        <!-- Rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Top label -->
            <RowDefinition Height="*"/>
            <!-- Main content -->
        </Grid.RowDefinitions>

        <!-- Columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200px"/>
            <!-- Left menu -->
            <ColumnDefinition Width="*"/>
            <!-- Right content -->
        </Grid.ColumnDefinitions>

        <!-- Top Label -->
        <Label Name="lbl"
               Content="songs"
               Background="AliceBlue"
               FontSize="20"
               Grid.Row="0"
               Grid.ColumnSpan="2"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Top"/>

        <!-- Left buttons panel -->
        <StackPanel Background="AliceBlue"
                    Grid.Row="1"
                    Grid.Column="0"
                    VerticalAlignment="Top">

            <Button x:Name="button1" Margin="5" Content="Button 1" Click="button1_Click"/>
            <Button x:Name="button2" Margin="5" Content="Button 2" Click="button2_Click"/>
            <Button x:Name="button3" Margin="5" Content="Button 3" Click="button3_Click"/>

        </StackPanel>

        <!-- Right ListBox -->
        <ListBox Name="songsListBoxs"
                 Grid.Column="1"
                 Grid.Row="1"
                 Background="WhiteSmoke"/>

    </Grid>
</Window>
