<Window x:Class="Telhai.Csharpproject.TaskAsyncAwait.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Telhai.Csharpproject.TaskAsyncAwait"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" >

            <TextBlock Text="Async/Await Student Demo" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>

            <ProgressBar IsIndeterminate="True" Height="20" Margin="0,0,0,20"/>

            <TextBlock x:Name="txtStatus" Text="Ready..." FontSize="16" Foreground="Gray" HorizontalAlignment="Center"/>

            <Button Name="BtnFreeze"  Content="1. Freeze UI (Thread.Sleep)" Click="BtnFreeze_Click" Padding="10"/>
            <Button Name="BtnTask" Content="2. Task.Run (Background)" Click="BtnTask_Click" Padding="10"/>
            <Button Name="BtnAsync" Content="3. Async  Await (Modern)" Click="BtnAsync_Click" Padding="10"/>
            <Button Name="BtnApi" Content="4. Call API (JSON)" Click="BtnApi_Click" Padding="10" Background="#DDDDFF"/>

        </StackPanel>
    </Grid>
</Window>
